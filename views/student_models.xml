<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
 <!--   hospital      -->
        <record id="student_details_form" model="ir.ui.view">
            <field name="name">hospital.details.form</field>
            <field name="model">hospital.details</field>
            <field name="arch" type="xml">
                <form string="Job">
                    <header>
                        <button name="set_recruit" string="Start Recruitment" states="open" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="set_open" string="Stop Recruitment" states="recruit" type="object" groups="base.group_user"/>
                       
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="hos_name" placeholder="e.g. Sales Manager"/></h1>
                                <field name="number_bed"/>
                        
                        </div>
                        </sheet>
                </form>
            </field>
        </record>

        <record id="student_details_tree" model="ir.ui.view">
            <field name="name">hospital.details.tree</field>
            <field name="model">hospital.details</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="hos_name"/>
                    <field name="number_bed"/>
                </tree>
            </field>
        </record>

        <record id="hr_job_view_kanban" model="ir.ui.view">
            <field name="name">hospital.details.kanban</field>
            <field name="model">hospital.details</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="hos_name"/></strong>
                                </div>
                                <div>
                                    <span><field name="number_bed"/>&amp;nbsp;</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record model="ir.actions.act_window" id="action_student_details">
    <field name="name">hospital_details</field>
    <field name="res_model">hospital.details</field>
    <field name="view_mode">tree,form,kanban</field>
    </record>



       <menuitem id="student_details_root" name="Student" sequence="0" />

       <menuitem id="student_details_student" name="Student" parent="student_details_root" action="action_student_details"/>

  <!-- corona -->
        <record id="student_details_form" model="ir.ui.view">
            <field name="name">corona.details.form</field>
            <field name="model">corona.details</field>
            <field name="arch" type="xml">
                <form string="Job">
                    <header>
                        <button name="set_recruit" string="Start Recruitment" states="open" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="set_open" string="Stop Recruitment" states="recruit" type="object" groups="base.group_user"/>
                       
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="country_name" placeholder="e.g. Sales Manager"/></h1>
                                <field name="die_count"/>
                        
                        </div>
                        </sheet>
                </form>
            </field>
        </record>

        <record id="student_details_tree" model="ir.ui.view">
            <field name="name">corona.details.tree</field>
            <field name="model">corona.details</field>
            <field name="arch" type="xml">
                <tree string="corona" >
                    <field name="country_name"/>
                    <field name="die_count"/>
                </tree>
            </field>
        </record>

        <record id="hr_job_view_kanban" model="ir.ui.view">
            <field name="name">corona.details.kanban</field>
            <field name="model">corona.details</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="country_name"/></strong>
                                </div>
                                <div>
                                    <span><field name="die_count"/>&amp;nbsp;</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record model="ir.actions.act_window" id="action_corona_details">
    <field name="name">corona.details</field>
    <field name="res_model">corona.details</field>
    <field name="view_mode">tree,form,kanban</field>
    </record>



       

       <menuitem id="corona_details_" name="Corona" parent="student_details_root" action="action_corona_details"/>

    </data>
</odoo>